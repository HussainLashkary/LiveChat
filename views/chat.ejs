<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enhanced Chat Page</title>
  <style>
    body {
      margin: 0;
      display: flex;
      font-family: Arial, sans-serif;
    }
    
    .sidebar {
      width: 20%;
      height: 100vh;
      background-color: #2f3640;
      color: white;
      padding: 10px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }
    
    .spaces {
      position: relative;
      margin-bottom: 20px;
    }
    
    .spaces-button {
      background-color: #353b48;
      color: white;
      padding: 10px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      text-align: center;
      width: 100%;
    }
    
    .spaces-button:hover {
      background-color: #718093;
    }
    
    .spaces-list {
      display: none;
      position: absolute;
      top: 40px;
      left: 0;
      background-color: #353b48;
      width: 100%;
      border-radius: 5px;
      z-index: 1000;
    }
    
    .spaces-list .space {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #2f3640;
    }
    
    .spaces-list .space:hover {
      background-color: #718093;
    }
    
    .chat-group {
      display: flex;
      align-items: center;
      cursor: pointer;
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      background: #353b48;
    }
    
    .chat-group:hover {
      background: #718093;
    }
    
    .chat-group .group-image {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      background-color: #ccc;
      margin-right: 10px;
    }
    
    .chat-area {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      height: 100vh;
      position: relative;
    }
    
    .chat-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      background-color: #353b48;
      color: white;
    }
    
    .chat-header .group-image {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      background-color: #ccc;
    }
    
    .chat-header .online-count {
      font-size: 14px;
    }
    
    .messages {
      flex-grow: 1;
      overflow-y: auto;
      padding: 15px;
      background-color: #f5f6fa;
    }
    
    .message {
      display: flex;
      align-items: center;
      margin: 10px 0;
      padding: 10px;
      background: #dcdde1;
      border-radius: 5px;
      max-width: 70%;
    }
    
    .message.sent {
      background: #4cd137;
      color: white;
      margin-left: auto;
    }
    
    .message .profile-image {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      object-fit: cover;
      background-color: #ccc;
      margin-right: 10px;
    }
    
    .input-area {
      display: flex;
      padding: 10px;
      background-color: #2f3640;
    }
    
    .input-area input {
      flex-grow: 1;
      padding: 10px;
      border: none;
      border-radius: 5px;
      outline: none;
    }
    
    .input-area button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #4cd137;
      color: white;
      margin-left: 10px;
      cursor: pointer;
    }
    
    .input-area button:hover {
      background-color: #44bd32;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="spaces">
      <button class="spaces-button">Spaces</button>
      <div class="spaces-list">
        <div class="space" data-space="Space 1">Space 1</div>
        <div class="space" data-space="Space 2">Space 2</div>
        <div class="space" data-space="Space 3">Space 3</div>
      </div>
    </div>
    <h2>Chat Groups</h2>
    <div class="chat-group">
      <img src="room-default.jpg" alt="Group Image" class="group-image">
      Group 1
    </div>
    <div class="chat-group">
      <img src="room-default.jpg" alt="Group Image" class="group-image">
      Group 2
    </div>
    <div class="chat-group">
      <img src="room-default.jpg" alt="Group Image" class="group-image">
      Group 3
    </div>
  </div>

  <div class="chat-area">
    <div class="chat-header">
      <span class="online-count">Online: 5</span>
      <img src="group-default.jpg" alt="Group Image" class="group-image">
    </div>
    <div class="messages">
      <div class="message received">
        <img src="user1.jpg" alt="User Profile" class="profile-image">
        <span>Hello! Welcome to the chat.</span>
      </div>
      <div class="message sent">
        <img src="user2.jpg" alt="User Profile" class="profile-image">
        <span>Hi! Thanks!</span>
      </div>
    </div>
    <div class="input-area">
      <input type="text" id="messageInput" placeholder="Type your message...">
      <button id="sendButton">Send</button>
    </div>
  </div>

  <script>
    const spacesButton = document.querySelector('.spaces-button');
    const spacesList = document.querySelector('.spaces-list');
    const spaceElements = document.querySelectorAll('.space');
    const chatGroups = document.querySelectorAll('.chat-group');

    spacesButton.addEventListener('click', () => {
      spacesList.style.display = spacesList.style.display === 'block' ? 'none' : 'block';
    });

    spaceElements.forEach(space => {
      space.addEventListener('click', () => {
        const selectedSpace = space.dataset.space;
        spacesButton.textContent = selectedSpace;

        chatGroups.forEach((group, index) => {
          group.querySelector("img").src = "room-default.jpg";
          group.textContent = `${selectedSpace} Group ${index + 1}`;
        });

        spacesList.style.display = 'none';
      });
    });
  </script>
</body>
</html>